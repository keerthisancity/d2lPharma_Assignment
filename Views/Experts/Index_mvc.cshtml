@model IEnumerable<d2lPharma_Assignment.Models.ExpertListViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" type="text/css" href="~/Content/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="~/Scripts/jquery.dataTables.js"></script>
}

<h2>Index</h2>
<div>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table" id="ExpertList">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExpertName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qualification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOJ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hospital)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpertName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Qualification)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOJ)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hospital)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ExpertID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ExpertID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ExpertID })
                </td>
            </tr>
        }

    </table>
    <script>
        $(document).ready(function () {
            $.noConflict();
            $('#ExpertList').DataTable();
    </script>
</div>